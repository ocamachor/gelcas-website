---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta
            name='description'
            content='Astro description'
        />
        <meta
            name='viewport'
            content='width=device-width'
        />
        <link
            rel='icon'
            type='image/svg+xml'
            href='favicon.svg'
        />
        <meta
            name='generator'
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <>
        <Header />
        <slot />
        <Footer />
    </>

    <style is:global>
        body {
            background-color: #282633;
        }
    </style>
</html>
